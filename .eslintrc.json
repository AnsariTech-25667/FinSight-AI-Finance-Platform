{
  "extends": [
    "eslint:recommended",
    "next/core-web-vitals"
  ],
  "env": {
    "browser": true,
    "es2021": true,
    "jest": true,
    "node": true
  },
  "plugins": [
    "react"
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "rules": {
    "semi": [
      "error",
      "always"
    ],
    "quotes": [
      "error",
      "double"
    ],
    "no-undef": "off",
    "no-unused-vars": "warn",
    "no-mixed-spaces-and-tabs": "off",
    "react-hooks/exhaustive-deps": "warn"
  }
}